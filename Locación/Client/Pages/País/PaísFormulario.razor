<EditForm Model="País" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Código</label>
        <div>
            <InputText class="form-control" @bind-Value="@País.PaísCódigo" />
            <ValidationMessage For="@(() => País.PaísCódigo)"/>
        </div>
    </div>
    <div class="form-group">
        <label>Nombre del país</label>
        <div>
            <InputText class="form-control" @bind-Value="@País.PaísNombre" />
            <ValidationMessage For="@(() => País.PaísNombre)" />
        </div>
    </div>
    <button class="btn-primary" type="submit">Guardar</button>
    <button class="btn-secondary" @onclick="OnCancel" type="button">Cancelar</button>

</EditForm>

@code {
    [Parameter] public País País { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
